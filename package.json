{
  "name": "zombieVPN",
  "version": "1.0.0",
  "description": "",
  "main": "src/app.ts",
  "scripts": {
    "test": "jest --runInBand",
    "build": "tsc",
    "start-client": "ts-node-dev src/client.ts --ignore-watch node_modules",
    "start-server": "ts-node-dev src/server.ts --ignore-watch node_modules",
    "sendtest": "ts-node-dev src/sendtest.ts --ignore-watch node_modules",
    "hai": "ts-node-dev src/vpnUtils.ts --ignore-watch node_modules"
  },
  "author": "hai.phan@zervant.com",
  "license": "ISC",
  "dependencies": {
    "crypto-random-string": "^1.0.0",
    "udp-request": "^2.0.0"
  },
  "devDependencies": {
    "jest": "^23.6.0",
    "ts-jest": "^23.10.3",
    "ts-node": "^7.0.1",
    "ts-node-dev": "^1.0.0-pre.30",
    "typescript": "^3.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/__test__/**/*.test.ts"
    ],
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  }
}
